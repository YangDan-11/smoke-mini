.container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}
.scan-wrapper {
  padding: 16rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  border-bottom: 2rpx solid #f5f5f5;
}

.scan-outline-icon {
  width: 60rpx;
  height: 60rpx;
  margin-right: 10rpx;
}

.content {
  flex: 1;
}

.empty {
  width: 100%;
  height: 300rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

.button-wrapper {
  display: flex;
  align-items: center;
  justify-content: flex-end;
  padding: 32rpx;
}


.button-wrapper button[disabled] {
  color: #7f7f7f;
  border: 2rpx solid #7f7f7f;
}

.cancel-select-all-btn, .select-all-btn,.delete-btn, .download-btn  {
  width: auto;
  padding: 6rpx 40rpx;
  background-color: #6190e8;
  border: 2rpx solid #4a81e7;
  color: #FFF;
  font-size: 26rpx;
  white-space: nowrap;
  margin: 0;
}

.cancel-select-all-btn, .select-all-btn,.delete-btn {
  margin-right: 20rpx !important;
}


.checkbox-list__label {
  display: flex;
  align-items: flex-start;
  justify-content: flex-start;
  padding: 20rpx;
  border-bottom: 2rpx solid #d6e4ef;
  box-sizing: border-box;
  width: 100%;
}

.checkbox-list__checkbox {
  margin-top: 10rpx;
}

.label-wrapper {
  display: flex;
  flex-direction: column;
}

.label {
  line-height: 60rpx;
  margin-left: 10rpx;
}

.desc {
  font-size: 28rpx;
  color: #dedede;
  margin-left: 10rpx;
}